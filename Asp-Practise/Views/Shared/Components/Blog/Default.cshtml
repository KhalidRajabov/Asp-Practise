@model List<Blog>


         @foreach (var item in Model)
                   {
                       <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="single-blog mb-60">
                            <div class="blog-img">
                                <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id"><img src="~/img/blog/@item.ImageUrl" alt="blog"></a>
                                <div class="blog-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </div>
                            <div class="blog-content">
                                <div class="blog-top">
                                    <p>@item.PublishInfo<i class="fa fa-comments-o"></i> 4</p>
                                </div>
                                <div class="blog-bottom">
                                    <h2><a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id">@item.Title</a></h2>
                                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id">read more</a>
                                </div>
                            </div>
                        </div>
                    </div>
                   }