@model List<Event>


        @foreach (var item in Model)
                   {
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="single-event mb-60">
                            <div class="event-img">
                                <a asp-controller="event" asp-action="details" asp-route-id="@item.Id">
                                    <img src="~/img/@item.ImageUrl" alt="event">
                                    <div class="course-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                                <div class="event-date">
                                    <h3>@item.StartTime.Day<span>@item.StartTime.Year</span></h3>  
                                </div>
                            </div>
                            <div class="event-content text-left">
                                <h4><a href="event-details.html">@item.Title</a></h4>
                                <ul>
                                    <li><span>time:</span> 9.00 AM - 4.45 PM</li>
                                    <li><span>venue</span> @item.Venue</li>
                                </ul>
                                <div class="event-content-right">
                                    <a class="default-btn" href="event-details.html">join now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                   }