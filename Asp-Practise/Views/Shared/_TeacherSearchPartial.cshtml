@model List<Teacher>

    @foreach (var item in Model)
   {
       <li class="d-flex" style=" padding:0;margin:10px 0; display:flex; align-items:center; border: 2px solid green; max-width:max-content" >
           <a  asp-controller="blogs" asp-route-id="@item.Id">@item.Name</a>
           <a style="color:red;" asp-controller="blogs" asp-route-id="@item.Id">(@item.Category)</a>
           <img src="~/img/@item.ImageUrl" width="60" height="120" accesskey="blog">
       </li>
   }